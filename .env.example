# Environment Variables for KP Med App
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_URL=http://localhost:8081
APP_NAME=KP Med
APP_VERSION=1.0.0
NODE_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get from: https://supabase.com/dashboard → Your Project → Settings → API
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (Server-side only - DO NOT expose to client!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# SENTRY CONFIGURATION (Error Monitoring) - Phase 3
# =============================================================================
# Get from: https://sentry.io → Your Project → Settings → Client Keys (DSN)
EXPO_PUBLIC_SENTRY_DSN=https://your-key@o12345.ingest.sentry.io/67890
SENTRY_AUTH_TOKEN=your-auth-token-here
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name

# =============================================================================
# ANALYTICS CONFIGURATION (PostHog) - Phase 3
# =============================================================================
# Get from: https://app.posthog.com → Project Settings → Project API Key
EXPO_PUBLIC_POSTHOG_API_KEY=phc_your_api_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================
# Expo Access Token (for EAS builds - optional)
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# =============================================================================
# FEATURE FLAGS - Phase 3
# =============================================================================
EXPO_PUBLIC_FEATURE_ANALYTICS=true
EXPO_PUBLIC_FEATURE_ERROR_MONITORING=true
EXPO_PUBLIC_FEATURE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_FEATURE_OFFLINE_MODE=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
EXPO_PUBLIC_DEBUG=false
EXPO_PUBLIC_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_MOCK_API=false

# =============================================================================
# QUICK START GUIDE
# =============================================================================
# 1. Copy this file: cp .env.example .env.local
# 2. Fill in Supabase credentials (required)
# 3. Optional: Set up Sentry (https://sentry.io)
# 4. Optional: Set up PostHog (https://posthog.com)
# 5. Start development: npm run dev
#
# For production deployment, see docs/DEPLOYMENT.md