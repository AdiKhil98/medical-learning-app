[build]
  command = "npm run build:web && npm install --prefix netlify/functions"
  publish = "dist"

[functions]
  directory = "netlify/functions"

[build.environment]
  NODE_VERSION = "18"

[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

[[redirects]]
  from = "/webhook"
  to = "/.netlify/functions/webhook"
  status = 200

[[redirects]]
  from = "/api/webhook-evaluation"
  to = "/.netlify/functions/webhook-evaluation"
  status = 200

[[redirects]]
  from = "/api/webhook/evaluation"
  to = "/.netlify/functions/webhook-evaluation"
  status = 200

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
[[redirects]]
  from = "/api/webhook/lemonsqueezy"
  to = "/.netlify/functions/lemonsqueezy"
  status = 200
